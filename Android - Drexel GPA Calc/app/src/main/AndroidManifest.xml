<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomer.drexelgpacalc"
    android:versionCode="4"
    android:versionName="1.3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/drexelicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddClass"
            android:label="Add Class"
            android:screenOrientation="portrait" />

        <activity
            android:name=".GpaAnalysis"
            android:label="Gpa Analysis"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />

        <activity
            android:name=".EditClass"
            android:label="Edit Class"
            android:screenOrientation="portrait" />

        <activity
            android:name=".SignIn"
            android:label="Sign in to Drexel One"
            android:screenOrientation="portrait" />

    </application>

</manifest>