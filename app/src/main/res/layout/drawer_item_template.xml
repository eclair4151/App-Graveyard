<?xml version="1.0" encoding="utf-8"?>

<com.shemeshapps.drexelregistrationassistant.CustomViews.DrawerCheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/drawer_item_background"
    android:background="@color/drexel_blue"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/divider"
        android:background="@color/drawer_divider_grey" />
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/drawer_item_icon_image"
            android:src="@drawable/drawer_top_icon"
            android:tint="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/drawer_item_text"
            android:textColor="@android:color/white"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="drawer item"/>
    </LinearLayout>
</com.shemeshapps.drexelregistrationassistant.CustomViews.DrawerCheckableLinearLayout>