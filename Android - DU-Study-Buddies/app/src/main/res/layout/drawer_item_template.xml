<?xml version="1.0" encoding="utf-8"?>

<com.shemeshapps.drexelstudybuddies.Helpers.DrawerCheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/drawer_item_background"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/drawer_item_icon_image"
        android:src="@drawable/lightbulb_icon"
        android:tint="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/drawer_item_text"
        android:textColor="@android:color/white"
        android:layout_marginLeft="20dp"
        android:text="drawer item"/>

</com.shemeshapps.drexelstudybuddies.Helpers.DrawerCheckableLinearLayout>